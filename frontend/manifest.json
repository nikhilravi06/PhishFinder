{
  "name": "PhishFinder",
  "version": "1.0.01",
  "description": "A phishing detector plugin",
  "permissions": ["activeTab","declarativeContent", "storage", "webNavigation"],
  "background": {
    "service_worker": "js/bg-loader.js"
  },
  "action": {
    "default_popup": "plugin_ui.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts":[
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["js/features.js"]
    }
  ],
  "manifest_version": 3
}
